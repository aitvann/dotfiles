#! /usr/bin/env bb
; vim: set ft=clojure:

(load-file (str (System/getenv "HOME") "/.local/bin/hypr_current_location.bb"))

(require
 '[hypr-current-location :refer [get-data]]
 '[clojure.java.shell :as shell :refer [sh]])

(let [{:keys [location nvim_pipe]} (get-data)]
  (sh "foot" "--log-level=error" "--title=nnn-file-manager" "zsh" "-ic" (str "NNN_TERMINAL='foot --log-level=error --title=nnn-file-manager-terminal' VISUAL='file-manager-edit-file " nvim_pipe " ' n -E -P v " location)))
