(defvar osd_time 0)
(defvar osd "{ \"icon\": \"ó°•¾\", \"value\": 0 }")

(defwidget osd_widget []
    (pad_section :name "osd-widget"
        (pad_element
            (label :class "osd-widget__icon"
                   :text {osd.icon}
                   :valign "center" 
                   :halign "start")
            (progress :class "osd-widget__scale"
                      :value {osd.value}
                      :valign "center"
                      :halign "end"
                      :orientation "h"
                      :flipped false))))

(defwindow osd
    :monitor 0
    :stacking "fg"
